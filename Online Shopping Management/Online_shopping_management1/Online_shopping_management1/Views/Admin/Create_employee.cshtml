@model Online_shopping_management1.Models.Emp

@{
    ViewBag.Title = "Create_employee";
    Layout = "~/Views/_Adminlayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-horizontal">
                        <h2 class="col-lg-12 text-lg-center">Add A New Employee</h2>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="col-md-3 col-form-label label-dark">Employee Name</label>
                            <div class="col-md-10">

                                @Html.EditorFor(model => model.emp_name, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.emp_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 col-form-label label-dark">Employee Role</label>
                            <div class="col-md-10">
                                <select class="form-control" name="emp_role">
                                    <option>Business Director</option>
                                    <option>Engineer</option>
                                    <option>Manager Director</option>
                                    <option>Manager </option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 col-form-label label-dark">Employee Contact</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.emp_contact, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.emp_contact, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            <label class="col-md-3 col-form-label label-dark">Employee Email Adress</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email_Adress, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email_Adress, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 col-form-label label-dark">Employee Username</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 col-form-label label-dark">Password</label>
                            <div class="col-md-10">
                                <input type="password" class="form-control" name="Pass" />
                                @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-form-label label-dark">Confirm Password</label>
                            <div class="col-md-10">
                                <input type="password" class="form-control" name="ConfirmPassword" />

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Insert" class="btn  btn-outline-dark " />
                            </div>
                        </div>
                    </div>   
                </div>
            </div>
        </div>
    </div>
    

}
<script src="~/Scripts/jquery-3.6.0.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>