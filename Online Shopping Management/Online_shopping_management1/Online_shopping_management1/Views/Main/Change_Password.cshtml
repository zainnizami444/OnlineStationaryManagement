@model Online_shopping_management1.Models.Emp

@{
    ViewBag.Title = "Change_Password";
    Layout = "~/Views/_Mainlayout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
             

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.empid)


                        <div class="form-group">
                            <center><h1>Change Password</h1></center>
                            <div class="col-md-10">
                                <input type="password" class="form-control" name="Pass" />
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.emp_name, new { htmlAttributes = new { @class = "form-control" } })

                        @Html.HiddenFor(model => model.emp_role, new { htmlAttributes = new { @class = "form-control" } })

                        @Html.HiddenFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })


                        @Html.HiddenFor(model => model.emp_contact, new { htmlAttributes = new { @class = "form-control" } })


                        @Html.HiddenFor(model => model.Email_Adress, new { htmlAttributes = new { @class = "form-control" } })


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.6.0.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>